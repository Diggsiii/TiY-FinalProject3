
    <% @zooms.each do |zoom| %>

        <%= link_to image_tag(zoom.image.url(:medium)), zoom %></br>
        <%= zoom.description %></br>
        <%= zoom.user.name if zoom.user %></br>

        <% if zoom.user == current_user %>
          <%= link_to 'Edit', edit_zoom_path(zoom) %>
          <%= link_to 'Destroy', zoom, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    <% end %>


